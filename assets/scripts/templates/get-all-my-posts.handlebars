<!-- this template first checks to see if the user has made any posts.
If not, posts is falsey and the user recieves a message that they've never posted. -->

{{#if posts}}

{{#each posts as |post|}}

  <section data-id={{post._id}} class="post">
    <div class="post-header">
      <h4>{{post.owner.nickname }}</h4>
    </div>
    <div class="post-body">
      <p>{{limit post.createdAt 10}}</p>
      <h6>{{post.text}}</h6>
    </div>
    <div>
      <button class='update-post'>Edit</button><button class='delete-post'>Delete</button>
    </div>
  </section>

{{/each}}

{{else }}
  <div>You've never posted!</div>

{{/if}}
